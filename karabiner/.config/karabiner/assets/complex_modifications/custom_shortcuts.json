{
  "title": "Custom Shortcuts",
  "rules": [
    {
      "description": "Open Alacritty when Command+Enter pressed",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "return_or_enter",
            "modifiers": {
              "mandatory": [
                "command"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -aalacritty"
            }
          ]
        }
      ]
    },
    {
      "description": "Open Firefox Nightly when Command+B is pressed",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "b",
            "modifiers": {
              "mandatory": [
                "command"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'Firefox Nightly.app'"
            }
          ]
        }
      ]
    },
    {
      "description": "Open KeePassXC when Command+P is pressed",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": [
                "command"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'KeePassXC.app'"
            }
          ]
        }
      ]
    }
  ]
}
