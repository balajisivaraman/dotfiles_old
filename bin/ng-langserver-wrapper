#!/bin/sh

set -e

node_version=$(node -v)
ng_langserver_location="$HOME/.fnm/node-versions/${node_version}/installation/lib/node_modules/@angular/language-server"
node_modules_location="$HOME/.fnm/node-versions/${node_version}/installation/lib/node_modules"
fnm_bin="node ${ng_langserver_location} --ngProbeLocations ${node_modules_location} --tsProbeLocations ${node_modules_location} --stdio"

exec $fnm_bin
