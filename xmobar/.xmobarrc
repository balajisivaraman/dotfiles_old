Config
    { font              = "xft:TerminessTTF NerdFont:pixelsize=12:antialias=true:hinting=true"
    , additionalFonts   = ["xft:TerminessTTF NerdFont:pixelsize=12:antialias=true:hinting=true"]
    , position          = TopP 0 48
    , bgColor           = "#000000"
    , fgColor           = "#ffffff"
    , allDesktops       = True
    , alpha             = 200
    , commands          = [
        Run Date "<fc=#feacd0>  %a %_d %b %Y | d.%j w.%W</fc>  <fc=#00d3d0> %H:%M:%S</fc>" "date" 10
      , Run Com "status-cmus" [] "nowplaying" 10
      , Run Com "status-vol" [] "volume" 10
      , Run StdinReader
                          ]
    , sepChar           = "%"
    , alignSep          = "}{"
    , template          = " %StdinReader% } %nowplaying% { %volume%  %date% "
    , lowerOnStart      = True
    , overrideRedirect  = True
    }
