#!/bin/sh

mute_status="$(pamixer --get-mute)"
volume="$(pamixer --get-volume)"

if [ "${mute_status}" == "true" ]
then
    volume=0
    color="#cc241d"
    icon="  "
else
    color="#689d6a"
    case $((volume/40)) in
        0) icon="  " ;; # fa-volume-down f027
        1) icon=" 墳 " ;; # fa-volume-up f028
        *) icon="  "; color="#d65d0e" ;; # fa-volume-up f028
    esac
fi

echo "<fc=$color><fn=1>$icon</fn> $volume</fc>"
